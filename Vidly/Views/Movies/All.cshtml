@model Vidly.ViewModels.MovieViewModel
@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
                @{
                    for (int i = 0; i < Model.Movies.Count; i++)
                    {
                        <tr>
                            <td><a href="">@Model.Movies[i].Name</a></td>
                        </tr>
                    }
                }
            </tbody>

        </table>
                    }


</div>


