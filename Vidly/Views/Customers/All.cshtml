@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container">
    <h2>Customers</h2>
    
    @if (Model.Count == 0)
    {
        <p>Currently we dont have any customers</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Firstname</th>
                </tr>
            </thead>
            <tbody>
                @{
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Html.ActionLink(Model[i].Name, "Details", new { id = Model[i].Id }, null)</td>
                        </tr>
                    }
                }
            </tbody>

        </table>
                    }
</div>
